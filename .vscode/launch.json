{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Gatsby develop",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/gatsby",
            "args": ["develop"],
            "runtimeArgs": ["--nolazy"],
            "console": "integratedTerminal"
        },
        {
            "name": "Gatsby build",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/gatsby",
            "args": ["build"],
            "runtimeArgs": ["--nolazy"],
            "console": "integratedTerminal"
        },
        {
            "command": "jest",
            "name": "Run test",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "jest ${relativeFile}",
            "name": "Run this files test",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}
